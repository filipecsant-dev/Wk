@model Wk.Web.Models.EditarCategoriaVM
@{
    ViewData["Title"] = "Editar Categoria";
}

<style>
    #formContent {
        max-width: none;
        width: 80%;
    }

    input {
        box-shadow: 0px 2px 5px 1px #d7d7d7;
    }

    select {
        box-shadow: 0px 2px 5px 1px #d7d7d7;
    }

    hr {
        height: 2px;
        background: black;
        background: -webkit-gradient(linear, 0 0, 100% 0, from(white), to(white), color-stop(50%, black));
    }



    .text-danger {
        margin-top: 10px;
        float: left;
        font-size: 12px;
        margin-left: 11%;
    }

    .flex {
        display: flex;
        flex-direction: column;
    }

    .validation {
        float: left;
    }

    label {
        margin-left: 6%;
    }
</style>

<link rel="stylesheet" href="~/css/cadastro.css" />

@using (Html.BeginForm("Editar", "Categorias", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class="text-danger", @id="validation" })

    <div class="panel">
        <div class="col-md-12">
            <h1 class="text-center fsize-22 m-b-xl" style="line-height: 1.4em;">Atualizar Categoria</h1>
        </div>

        @Html.TextBoxFor(model => model.ID, new { @type="hidden"})
        <br />
        <br />
        <br />
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class="text-danger"})
        <br />
        @Html.TextBoxFor(model => model.Nome, new { @class = "fadeIn second", @placeholder="Nome da categoria"})
    </div>

    <br />
    <br />

    <input type="submit" class="fadeIn fourth" id="valida" value="Atualizar Categoria" style="width:80%; margin-left:10%;">
}
